<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-4">Managers</h1>
        <a href="/managers/new" class="btn btn-primary">Add New Manager</a>
    </div>

    <% if (typeof message !== 'undefined' && message) { %>
        <div class="alert <%= message.type === 'success' ? 'alert-success' : 'alert-danger' %> alert-dismissible fade show" role="alert">
            <%= message.text %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    <% } %>

    <% if (managers && managers.length > 0) { %>
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            <% managers.forEach(manager => { %>
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title"><%= manager.name %></h5>
                            <p class="card-text text-muted"><%= manager.email %></p>
                            <p class="card-text">
                                <strong>Department:</strong> <%= manager.department || 'N/A' %><br>
                                <strong>Company ID:</strong> <%= manager.company_id %>
                            </p>
                            <div class="d-flex justify-content-end mt-3">
                                <a href="/managers/<%= manager.id %>" class="btn btn-outline-secondary btn-sm me-2">View</a>
                                <a href="/managers/edit/<%= manager.id %>" class="btn btn-outline-primary btn-sm me-2">Edit</a>
                                <form action="/managers/delete/<%= manager.id %>?_method=DELETE" method="POST" onsubmit="return confirm('Are you sure you want to delete this manager?');" class="d-inline">
                                    <button type="submit" class="btn btn-outline-danger btn-sm">Delete</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    <% } else { %>
        <div class="text-center py-5">
            <p class="lead text-muted">No managers found.</p>
            <p class="mt-2">Why not add one?</p>
        </div>
    <% } %>
</div>