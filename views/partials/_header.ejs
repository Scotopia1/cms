<% if (typeof user !== 'undefined' && user) { %>
    <div class="dropdown">
        <a href="#" class="d-flex align-items-center text-white text-decoration-none dropdown-toggle px-3 py-2" id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">
            <img src="https://placehold.co/32x32/6c757d/ffffff?text=<%= user.name ? user.name.charAt(0).toUpperCase() : 'U' %>" alt="" width="32" height="32" class="rounded-circle me-2">
            <strong><%= user.name || user.email %></strong>
        </a>
        <ul class="dropdown-menu dropdown-menu-dark text-small shadow" aria-labelledby="dropdownUser1">
            <li><a class="dropdown-item" href="/profile">Profile</a></li>
            <li><a class="dropdown-item" href="/settings">Settings</a></li>
            <li><hr class="dropdown-divider"></li>
            <li><a class="dropdown-item" href="/auth/logout">Sign out</a></li>
        </ul>
    </div>
<% } else { %>
    <div class="px-3 py-2">
        <a href="/auth/login" class="btn btn-outline-light btn-sm me-2">Login</a>
        <a href="/auth/signup" class="btn btn-warning btn-sm">Sign up</a>
    </div>
<% } %>