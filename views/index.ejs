<% locals.page = 'dashboard'; %>

<div class="content-header">
    <div>
        <h1 class="h2 mb-0">Dashboard</h1>
        <% if (typeof user !== 'undefined' && user) { %>
            <p class="text-muted">Welcome back, <%= user.name || user.email %>!</p>
        <% } else { %>
            <p class="text-muted">Welcome to TaskFlow!</p>
        <% } %>
    </div>
</div>

<div class="row mb-4">
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-start border-primary border-4 h-100 shadow-sm">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs fw-bold text-primary text-uppercase mb-1">Total Tasks</div>
                        <div class="h5 mb-0 fw-bold text-gray-800"><%= typeof totalTasks !== 'undefined' ? totalTasks : '0' %></div>
                        <div class="text-muted small mt-1"><%= typeof unfinishedTasks !== 'undefined' ? unfinishedTasks : '0' %> Unfinished</div>
                    </div>
                    <div class="col-auto">
                        <i class="bi bi-list-check fs-2 text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <% if (typeof user !== 'undefined' && user && user.role === 'manager') { %>
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-start border-success border-4 h-100 shadow-sm">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs fw-bold text-success text-uppercase mb-1">Team Members</div>
                            <div class="h5 mb-0 fw-bold text-gray-800"><%= typeof teamMemberCount !== 'undefined' ? teamMemberCount : '0' %></div>
                            <div class="text-muted small mt-1"><%= typeof adminCount !== 'undefined' ? adminCount : '0' %> Admins/Managers</div>
                        </div>
                        <div class="col-auto">
                            <i class="bi bi-people-fill fs-2 text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    <% } %>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-start border-warning border-4 h-100 shadow-sm">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs fw-bold text-warning text-uppercase mb-1">Upcoming Deadlines</div>
                        <div class="h5 mb-0 fw-bold text-gray-800"><%= typeof upcomingDeadlineCount !== 'undefined' ? upcomingDeadlineCount : '0' %></div>
                        <div class="text-muted small mt-1">In this week</div>
                    </div>
                    <div class="col-auto">
                        <i class="bi bi-calendar-event-fill fs-2 text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-start border-info border-4 h-100 shadow-sm">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs fw-bold text-info text-uppercase mb-1">Active Projects</div>
                        <div class="h5 mb-0 fw-bold text-gray-800"><%= typeof activeProjectsCount !== 'undefined' ? activeProjectsCount : '0' %></div>
                        <div class="text-muted small mt-1">Currently running</div>
                    </div>
                    <div class="col-auto">
                        <i class="bi bi-kanban fs-2 text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-7 mb-4">
        <div class="card shadow-sm">
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 fw-bold text-primary">Recent Tasks</h6>
                <a href="/tasks" class="btn btn-sm btn-outline-primary">View All</a>
            </div>
            <div class="card-body">
                <% if (typeof recentTasks !== 'undefined' && recentTasks.length > 0) { %>
                    <ul class="list-group list-group-flush">
                        <% recentTasks.forEach(task => { %>
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <div>
                                    <a href="/tasks/<%= task.id %>" class="text-decoration-none text-dark fw-semibold"><%= task.title %></a>
                                    <div class="small text-muted">Due: <%= task.due_date ? new Date(task.due_date).toLocaleDateString() : 'N/A' %></div>
                                </div>
                                <%
                                    let badgeClass = 'bg-secondary';
                                    let textClass = 'text-white';
                                    if (task.status) {
                                        switch (task.status.toLowerCase()) {
                                            case 'to do': badgeClass = 'bg-info'; textClass = 'text-dark'; break;
                                            case 'in progress': badgeClass = 'bg-primary'; break;
                                            case 'completed': badgeClass = 'bg-success'; break;
                                            case 'blocked': badgeClass = 'bg-danger'; break;
                                            default: badgeClass = 'bg-light'; textClass = 'text-dark';
                                        }
                                    }
                                %>
                                <span class="badge <%= badgeClass %> <%= textClass %> rounded-pill"><%= task.status %></span>
                            </li>
                        <% }); %>
                    </ul>
                <% } else { %>
                    <p class="text-muted text-center py-3">No recent tasks.</p>
                <% } %>
            </div>
        </div>
    </div>

    <% if (typeof user !== 'undefined' && user && user.role === 'manager') { %>
        <div class="col-lg-5 mb-4">
            <div class="card shadow-sm">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 fw-bold text-success">Team Members</h6>
                    <a href="/members" class="btn btn-sm btn-outline-success">Manage</a>
                </div>
                <div class="card-body">
                    <% if (typeof teamMembers !== 'undefined' && teamMembers.length > 0) { %>
                        <ul class="list-group list-group-flush">
                            <% teamMembers.slice(0, 5).forEach(member => { %>
                            <li class="list-group-item d-flex align-items-center">
                                <img src="https://placehold.co/40x40/6c757d/ffffff?text=<%= member.name ? member.name.charAt(0).toUpperCase() : 'M' %>" class="rounded-circle me-3" alt="<%= member.name %>" width="40" height="40">
                                <div>
                                    <div class="fw-semibold"><%= member.name %></div>
                                    <div class="small text-muted"><%= member.role || 'Member' %></div>
                                </div>
                            </li>
                            <% }); %>
                        </ul>
                    <% } else { %>
                        <p class="text-muted text-center py-3">No team members to display.</p>
                    <% } %>
                </div>
            </div>
        </div>
    <% } %>
</div>