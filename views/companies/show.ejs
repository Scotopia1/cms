<div class="container mt-4">
    <h1 class="display-5 mb-4"><%= company.name %></h1>
    <ul class="list-group mb-4">
        <li class="list-group-item"><strong>Industry:</strong> <%= company.industry %></li>
        <li class="list-group-item"><strong>Location:</strong> <%= company.location %></li>
        <li class="list-group-item"><strong>Contact Info:</strong> <%= company.contactInfo %></li>
        <li class="list-group-item"><strong>Website:</strong> <a href="<%= company.website %>" target="_blank"><%= company.website %></a></li>
    </ul>
    <a href="/companies/edit/<%= company.id %>" class="btn btn-primary">Edit</a>
    <form action="/companies/delete/<%= company.id %>?_method=DELETE" method="POST" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this company?');">
        <button type="submit" class="btn btn-danger">Delete</button>
    </form>
    <a href="/companies" class="btn btn-secondary ms-2">Back to List</a>
</div>

